<div class="p-4">
    <ContentPanel @title="Details" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-900">
        <div class="grid grid-cols-2 gap-2 text-xs md:mb-6 dark:text-gray-100">
            <div class="field-info-container">
                <div class="field-name">ID</div>
                <div class="field-value">{{n-a @batch.public_id}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Product</div>
                <div class="field-value">{{n-a @batch.product.name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Batch Number</div>
                <div class="field-value">{{n-a @batch.batch_number}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Quantity</div>
                <div class="field-value">{{n-a @batch.quantity}}</div>
            </div>
        </div>
    </ContentPanel>
</div>